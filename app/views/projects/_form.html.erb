<%= form_with(model: project, class: "max-w-2xl mx-auto bg-white p-6 rounded-xl shadow-md space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-md">
      <h2 class="font-semibold mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul class="list-disc pl-5 text-sm">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Status -->
  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :status, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
  </div>

  <!-- Client -->
  <div>
    <%= form.label :client_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :client_id,
          options_from_collection_for_select(@clients, :id, :name),
          { prompt: "Select a client" },
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          required: true %>
  </div>

  <!-- User -->
  <div>
    <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :user_id,
          options_from_collection_for_select(@users, :id, :email),
          { prompt: "Assign a user" },
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          required: true %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Save Project", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
