<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <span class="px-2 py-1 bg-green-200 text-green-800 rounded">
      <%= task.status.titleize %>
    </span>

    <%= form_with url: toggle_complete_task_path(task), method: :patch do %>
      <%= check_box_tag "complete", "1", task.status == "complete", onchange: "this.form.submit()" %>
    <% end %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
